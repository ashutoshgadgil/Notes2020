#include<stdio.h>
#include<conio.h>

int main()
{
	int num=25;
	
	if(num<0)
		printf("Number is negative");
	else if(num==10)
		printf("Number is 10");
	else if(num>0)
		printf("Number is positive");
	else
		printf("Number is invalid");
	
	
	return 0;
}

