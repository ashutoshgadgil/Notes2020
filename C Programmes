int main()
{
	int age=20;
	
	if(age>=18)
	{
		printf("Welcome to C Programming\n");
		if((age>20)&&(age<25))
			printf("You can take Exam XYZ");
		else
			printf("You are elegible for Basic certification in C");
	}
	else
	{
		printf("You are not elegible for exam");
	}
	
	return 0;
}

