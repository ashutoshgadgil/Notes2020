#include<stdio.h>
#include<conio.h>

int main()
{
	int a=11,b=2;
	
	float c;
	
	c=a/(float)b;   // 11 /2.0  Type casting
	
	printf("%f\n",c);
	
	float f=5.12;
	int d=f;
	printf("%d\n",d);
	
	
	char alpha='B';
	char aa='a';
	
	printf("%d\n",alpha);
	printf("%d\n",aa);
	
	int temp=alpha;
	printf("%d",temp);
	
	return 0;
}
