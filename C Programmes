    //Q.2
    
    float pi,radius,area;
    pi=3.14; 
    radius=4.1;
    area=pi*radius*radius;
    printf("Area of circle : %f\n",area);
    
    float length=100,breadth=20;
   	float rect_area;
   	
   	rect_area=length*breadth;
   	printf("\nArea of Rectangle : %f",rect_area);
   	
	printf("\nSachin 34");
	    
	printf("\nArea : %f",pi*radius*radius);
     
	return 0;
}

