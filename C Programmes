#include<stdio.h>
#include<conio.h>

int main()
{
	int x=10;
	
	x+=12;  // x=x+12 > x = 10 + 12
	
	printf("x = %d",x);
	
	x-=12;  // x=x-12 > 22 - 12
	
	printf("\nx = %d",x);
	
	
	return 0;
}

