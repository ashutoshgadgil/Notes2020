21



#include<stdio.h>
#include<conio.h>

int main()
{
	int x=10;
	int y=20;
	
	// Relational operators
	printf("%d\n",(x<y));
	printf("%d\n",(x>y));
	printf("%d\n",(x<=y));
	printf("%d\n",(x>=y));
	printf("%d\n",(x==y));
	printf("%d",(x!=y));
	
	// Logical operators
	
	printf("\n\n%d",((x>y)&&(x<20)));
	printf("\n\n%d",((x>y)||(x<20)));
	printf("\n\n%d",((x>y)&&(x<20)||(y>40)));
	printf("\n\n%d",(!(x>y)));
	
	// Bitwise operators
	printf("\n\n%d",((x>y)&(x<20)));
	printf("\n\n%d",((x>y)|(x<20)));
	
	
	
	

	// Difference between && and & 
		
	printf("\n\n%d",((5>20)&&(++x<20)));
	printf("\t%d",x);  // x = 11
	
	x=10;
	
	printf("\n\n%d",((5>20)&(++x<20)));	
	printf("\t%d",x);  // x =
	
	return 0;
}

