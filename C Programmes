int main()
{
	float a=3,b=2;
	
	float res;
	
	//res=(a*a)-(2*a*b)+(b*b);
	
	res=a*a/b*b;     // 3.5 * 1.4* 2.5  = 12.25
	printf("res = %f\n",res);
	
	
	return 0;
}
 
