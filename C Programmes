18
#include<stdio.h>
#include<conio.h>

int main()
{
	/*
    int n1=15;
    int n2=2;
    
    printf("Remainder : %d\n",(n1%n2));
    
    int num=1234;
    
    printf("Last digit : %d\n",num%10);  // returning last digit of number
    
    printf("%f",(float)num/1000);   // removing the last digit of number
    */
    //==================================================================
    
    int x =20;
    
    printf("\n\nPost increment operator\n");
    printf("x = %d\n",x);  // 20
    
    printf("x = %d\n",x++); //20
    
    printf("x = %d\n",x);   //21
    
    int y=30;
    printf("\n\nPre increment operator\n");
    printf("y = %d\n",y);  // 20
    
    printf("y = %d\n",++y); //20
    
    printf("y = %d\n",y);   //21
    
    int z=40;
    
    z++;  // z=40
    z++;  // z=41
    z++;  // z=42
    printf("%d",z++);  // z=43   
    
    printf("%d",z);    // z=44  
    
    ++z;  // z=45
    ++z;  // z=46
    ++z;  // z=47
    printf("%d",++z);  // z=48   
    
    printf("%d",z);    // z=48  
    
    
    
	return 0;
}
===================================================================

