#include<conio.h>

int main()
{
	int number1,number2,res;
	
	printf("Enter first number : ");
	scanf("%d",&number1);        // run time initialization
	
	printf("Enter second number : ");
	scanf("%d",&number2);        // run time initialization
	
	res=number1+number2;
	
	printf("Sum of %d and %d is %d",number1,number2,res);
	
	return 0;
}

