24

#include<stdio.h>
#include<stdlib.h>
#include<conio.h>

// Example of Recursive function

void A(int x)
{	
	if(x--==0)
		exit(0);
 	printf("Hello\n");
	A(x);
}

int main()
{
	A(2);
	return 0;
}

